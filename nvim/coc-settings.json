{
  "tsserver.npm": "/usr/bin/npm",
  "tsserver.orgnizeImportOnSave": true,

  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  "snippets.extends": {
    "javascriptreact": ["javascript"],
    "typescriptreact": ["typescript"]
  },

  "jest.enabled": true,
  "jest.pathToJest": "./node_modules/.bin/jest",
  "jest.pathToConfig": "./package.json",
  "suggest.noselect": false,

  "languageserver": {
    "kotlin": {
      "command": "kotlin-language-server",
      "filetypes": ["kotlin"]
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },

    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    
    "nim": {
      "command": "/home/avahe/programming/nim/nimlsp/nimlsp",
      "filetypes": ["nim"],
      "trace.server": "verbose"
    }
  },
  "java.format.settings.url": "/home/avahe/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml"

}
